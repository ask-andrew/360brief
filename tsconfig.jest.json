{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es2017"
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "**/__mocks__/**/*.ts",
    "**/__mocks__/**/*.tsx"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
